<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_app_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/photo002"
    android:orientation="vertical">

    <com.myself.rxjavasamsples.library.view.NavigationBar
        style="@style/style_navigation_bar"
        android:background="#00000000"
        auto:nav_divider_color="@color/divider_color"
        auto:nav_has_divider="true"
        auto:nav_left_icon="@drawable/back_selector"
        auto:nav_main_title="应用信息"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/a_10dp"
        android:layout_marginTop="@dimen/a_5dp"
        android:background="@drawable/bg_hyaline_shape"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/a_10dp"
            android:text="应用名称："/>

        <TextView
            android:id="@+id/tv_appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/a_10dp"
            android:text=""
            android:textIsSelectable="true"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/a_10dp"
        android:layout_marginTop="@dimen/a_3dp"
        android:background="@drawable/bg_hyaline_shape"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/a_10dp"
            android:text="版        本："/>

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/a_10dp"
            android:text=""
            android:textIsSelectable="true"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/a_10dp"
        android:layout_marginTop="@dimen/a_3dp"
        android:background="@drawable/bg_hyaline_shape"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/a_10dp"
            android:text="版本    号："/>

        <TextView
            android:id="@+id/tv_versionShort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/a_10dp"
            android:text=""
            android:textIsSelectable="true"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/a_10dp"
        android:layout_marginTop="@dimen/a_3dp"
        android:background="@drawable/bg_hyaline_shape"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/a_10dp"
            android:text="文件大小："/>

        <TextView
            android:id="@+id/tv_fsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/a_10dp"
            android:text=""
            android:textIsSelectable="true"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/a_10dp"
        android:layout_marginTop="@dimen/a_3dp"
        android:background="@drawable/bg_hyaline_shape"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/a_10dp"
            android:text="更新时间："/>

        <TextView
            android:id="@+id/tv_updatetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/a_10dp"
            android:text=""
            android:textIsSelectable="true"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/a_10dp"
        android:layout_marginTop="@dimen/a_3dp"
        android:background="@drawable/bg_hyaline_shape"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/a_10dp"
            android:text="更新日志："/>

        <TextView
            android:id="@+id/tv_changelog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/a_10dp"
            android:text=""
            android:textIsSelectable="true"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/a_10dp"
        android:layout_marginTop="@dimen/a_3dp"
        android:background="@drawable/bg_hyaline_shape"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/a_10dp"
            android:text="更新地址："/>

        <TextView
            android:id="@+id/tv_update_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/a_10dp"
            android:text=""
            android:textIsSelectable="true"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/a_10dp"
        android:layout_marginTop="@dimen/a_3dp"
        android:background="@drawable/bg_hyaline_shape"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/a_10dp"
            android:text="安装地址："/>

        <TextView
            android:id="@+id/tv_installUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/a_10dp"
            android:text=""
            android:textIsSelectable="true"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>
